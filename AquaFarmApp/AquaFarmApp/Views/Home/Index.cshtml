@model AquaFarmApp.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-primary">Tổng quan hệ thống</h1>
        @if (Model.IsOwner)
        {
            <a asp-controller="Farm" asp-action="Create" class="btn btn-primary">Thêm trang trại mới</a>
        }
    </div>

    <!-- Thống kê nhanh -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Tổng số trang trại</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalFarms</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-farm fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Tổng số khu vực</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalAreas</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-water fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @if (Model.IsOwner)
        {
            <div class="col-md-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Tổng số nhân viên</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalStaff</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-users fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Danh sách trang trại -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách trang trại</h6>
        </div>
        <div class="card-body">
            @if (Model.Farms.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered" id="farmTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Tên trang trại</th>
                                <th>Địa chỉ</th>
                                <th>Số khu vực</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var farm in Model.Farms)
                            {
                                <tr>
                                    <td>@farm.FarmName</td>
                                    <td>@farm.FarmLocation</td>
                                    <td>@farm.Areas.Count</td>
                                    <td>
                                        <a asp-controller="Batch" asp-action="AreaBatchIndex" asp-route-farmId="@farm.FarmId" class="btn btn-info btn-sm">Xem chi tiết</a>
                                        <a asp-controller="Farm" asp-action="Edit" asp-route-id="@farm.FarmId" class="btn btn-warning btn-sm">Sửa</a>
                                        <form asp-controller="Farm" asp-action="Delete" asp-route-id="@farm.FarmId" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa trang trại này?');">Xóa</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">Hiện tại chưa có trang trại nào. Vui lòng thêm trang trại mới.</p>
            }
        </div>
    </div>

    <!-- Biểu đồ thống kê doanh thu theo trang trại (tùy chọn, chỉ cho Owner) -->
    @if (Model.IsOwner && Model.Farms.Any())
    {
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Thống kê doanh thu theo trang trại</h6>
            </div>
            <div class="card-body">
                <form id="revenueForm" class="mb-3">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="farmId">Chọn trang trại:</label>
                            <select id="farmId" name="farmId" class="form-control">
                                @foreach (var farm in Model.Farms)
                                {
                                    <option value="@farm.FarmId">@farm.FarmName</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="groupBy">Tổng hợp theo:</label>
                            <select id="groupBy" name="groupBy" class="form-control">
                                <option value="Quarter">Quý</option>
                                <option value="Year">Năm</option>
                            </select>
                        </div>
                    </div>
                    <button type="button" class="btn btn-primary mt-2" onclick="loadRevenueChart()">Hiển thị biểu đồ</button>
                </form>
                <canvas id="revenueChart" width="800" height="400"></canvas>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
            let revenueChart; // Để destroy và tạo mới biểu đồ

            function loadRevenueChart() {
                const farmId = document.getElementById('farmId').value;
                const groupBy = document.getElementById('groupBy').value;

                fetch(`/Report/RevenueReportByFarm?farmId=${farmId}&groupBy=${groupBy}`)
                    .then(response => response.json())
                    .then(data => {
                        const ctx = document.getElementById('revenueChart').getContext('2d');

                        // Destroy biểu đồ cũ nếu tồn tại
                        if (revenueChart) {
                            revenueChart.destroy();
                        }

                        revenueChart = new Chart(ctx, {
                            type: 'bar',
                            data: {
                                labels: data.labels,
                                datasets: [
                                    {
                                        label: 'Doanh Thu (VND)',
                                        data: data.revenues,
                                        backgroundColor: 'rgba(75, 192, 192, 0.6)',
                                        borderColor: 'rgba(75, 192, 192, 1)',
                                        borderWidth: 1
                                    },
                                    {
                                        label: 'Lợi Nhuận (VND)',
                                        data: data.profits,
                                        backgroundColor: 'rgba(153, 102, 255, 0.6)',
                                        borderColor: 'rgba(153, 102, 255, 1)',
                                        borderWidth: 1
                                    }
                                ]
                            },
                            options: {
                                responsive: true,
                                scales: {
                                    x: { title: { display: true, text: groupBy === 'Year' ? 'Năm' : 'Quý' } },
                                    y: { title: { display: true, text: 'Giá Trị (VND)' }, beginAtZero: true }
                                },
                                plugins: { legend: { display: true } }
                            }
                        });
                    })
                    .catch(error => console.error('Error loading chart:', error));
            }
        </script>
    }

</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}