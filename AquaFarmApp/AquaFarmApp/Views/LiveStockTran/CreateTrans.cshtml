@using AquaFarmApp.ViewModels
@model LiveStockTranViewModel
@{
    ViewData["Title"] = "Create New Transaction";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<h2>Tạo giao dịch mới</h2>
<form asp-action="CreateTrans" method="post">
    <input type="hidden" asp-for="AreaBatchId" />
    <div class="form-group">
        <label asp-for="TransType">Loại giao dịch</label>
        <select asp-for="TransType" class="form-control">
            <option value="Import">Nhập</option>
            <option value="Export">Xuất</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Reason">Lý do</label>
        <input asp-for="Reason" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Quantity">Số lượng</label>
        <input asp-for="Quantity" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label asp-for="TransDate">Ngày giao dịch</label>
        <input asp-for="TransDate" class="form-control" type="datetime-local" />
    </div>
    <div class="form-group">
        <label asp-for="Note">Ghi chú</label>
        <textarea asp-for="Note" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Tạo</button>
</form>
