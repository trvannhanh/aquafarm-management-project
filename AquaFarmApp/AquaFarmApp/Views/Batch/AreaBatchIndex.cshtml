@using AquaFarmApp.ViewModels
@model List<AreaBatchViewModel>

@{
    ViewData["Title"] = "Thông Tin Chi Tiết Khu Vực";
    int areaId = ViewBag.AreaId ?? Model.FirstOrDefault()?.AreaId ?? 0;
    int areaBatchId = ViewBag.AreaBatchId ?? Model.FirstOrDefault()?.AreaBatchId ?? 0;
    string areaName = ViewBag.AreaName ?? Model.FirstOrDefault()?.AreaName ?? $"Khu vực ID: {areaId}";
}

    <div class="container-fluid mt-4">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0 text-primary">Thông Tin Chi Tiết @areaName</h1>
            <div>
                
            </div>
        </div>
        <!-- Thống kê nhanh (tùy chọn) -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Tổng số lứa nuôi</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-boxes fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Tổng số lượng</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Sum(ab => ab.Quantity)</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-fish fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Danh sách AreaBatch -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Danh Sách Lô Hàng Trong Khu Vực</h6>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" id="areaBatchTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Mã Lứa Nuôi</th>
                                    <th>Giống Thủy Sản</th>
                                    <th>Số Lượng</th>
                                    <th>Trạng Thái</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.BatchId</td>
                                        <td>@item.AquaticBreed</td>
                                        <td>@item.Quantity.ToString("N0")</td>
                                        <td>
                                            <span class="badge @(item.BatchStatus == "Avail" ? "badge-success" : item.BatchStatus == "NotAvail" ? "badge-danger" : "badge-warning")">
                                                @(item.BatchStatus == "Avail" ? "Đang hoạt động" : item.BatchStatus == "NotAvail" ? "Ngừng hoạt động" : item.BatchStatus)
                                            </span>
                                        </td>
                                    @if(item.BatchStatus == "Avail")
                                    {
                                        <td>
                                            @if (User.IsInRole("Owner"))
                                            {

                                                <a asp-controller="FeedSchedule" asp-action="Create" asp-route-id="@areaBatchId" class="btn btn-info btn-sm">
                                                    <i class="fas fa-fish"></i> Tạo Lịch Cho Ăn
                                                </a>
                                                <a asp-controller="HarvestSale" asp-action="Create" asp-route-id="@areaBatchId" class="btn btn-info btn-sm">
                                                    <i class="fas fa-fish"></i> Tạo Báo Cáo Tiêu Thụ
                                                </a>
                                            }
                                            @if (User.IsInRole("Staff"))
                                            {

                                                <a asp-controller="LiveStockTran" asp-action="CreateTrans" asp-route-id="@areaBatchId" class="btn btn-primary btn-sm">
                                                    <i class="fas fa-plus"></i> Tạo Giao Dịch Nhập Xuất
                                                </a>
                                                <a asp-controller="HealthCheck" asp-action="Create" asp-route-areaId="@areaBatchId" class="btn btn-success btn-sm">
                                                    <i class="fas fa-heartbeat"></i> Tạo Báo Cáo Sức Khỏe
                                                </a>
                                            }

                                            
                                            
                                        </td>
                                    }
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">Hiện tại chưa có lô hàng nào trong khu vực này.</p>
                }
            </div>
        </div>
    </div>

@section Scripts {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            // Xác nhận hành động xóa (nếu cần thêm hành động xóa)
            function confirmAction(actionName) {
                return confirm(`Bạn có chắc muốn ${actionName}?`);
            }
        </script>
}
