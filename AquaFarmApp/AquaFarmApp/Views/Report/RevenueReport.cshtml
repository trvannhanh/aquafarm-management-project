@model AquaFarmApp.ViewModels.RevenueReportViewModel

@{
    ViewData["Title"] = "Báo Cáo Thống Kê Doanh Thu";
}

<h2>Báo Cáo Thống Kê Doanh Thu Và Lợi Nhuận</h2>

<!-- Form lọc dữ liệu -->
<form asp-action="RevenueReport" method="get">
    <div class="form-group">
        <label for="batchId">Lứa Nuôi (BatchId):</label>
        <input type="number" name="batchId" value="@Model.BatchId" class="form-control" />
    </div>
    <div class="form-group">
        <label for="groupBy">Tổng Hợp Theo:</label>
        <select name="groupBy" class="form-control">
            <option value="Quarter" selected="@(Model.GroupBy == "Quarter")">Quý</option>
            <option value="Year" selected="@(Model.GroupBy == "Year")">Năm</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Lọc</button>
</form>

@if (!Model.Labels.Any())
{
    <p>Không có dữ liệu báo cáo cho lứa nuôi của bạn.</p>
}
else
{
    <!-- Canvas cho biểu đồ cột -->
    <canvas id="revenueChart" width="800" height="400"></canvas>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Chuẩn bị dữ liệu từ Model
        var labels = @Html.Raw(Json.Serialize(Model.Labels));
        var revenues = @Html.Raw(Json.Serialize(Model.Revenues));
        var profits = @Html.Raw(Json.Serialize(Model.Profits));

        // Cấu hình Chart.js (Bar Chart)
        var ctx = document.getElementById('revenueChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Doanh Thu (VND)',
                        data: revenues,
                        backgroundColor: 'rgba(75, 192, 192, 0.6)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    },
                    {
                        label: 'Lợi Nhuận (VND)',
                        data: profits,
                        backgroundColor: 'rgba(153, 102, 255, 0.6)',
                        borderColor: 'rgba(153, 102, 255, 1)',
                        borderWidth: 1
                    }
                ]
            },
            options: {
                responsive: true,
                scales: {
                    x: {
                        title: { display: true, text: '@(Model.GroupBy == "Year" ? "Năm" : "Quý")' }
                    },
                    y: {
                        title: { display: true, text: 'Giá Trị (VND)' },
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: { display: true }
                }
            }
        });
    </script>
}