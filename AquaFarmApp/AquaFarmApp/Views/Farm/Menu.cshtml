@{
    ViewData["Title"] = "Farm Menu";
    Layout = null;
}
<html>
<head>
    <style>
        body {
            background-image: url('/images/background.jpg');
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .menu {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            background: rgba(255, 255, 255, 0.8);
            padding: 40px;
            border-radius: 20px;
        }

            .menu a {
                padding: 20px;
                background: #007BFF;
                color: white;
                text-align: center;
                border-radius: 10px;
                text-decoration: none;
                font-weight: bold;
            }

                .menu a:hover {
                    background: #0056b3;
                }
    </style>
</head>
<body>
    <div class="menu">
        <a asp-controller="Farm" asp-action="Create">Tạo Farm</a>
        <a asp-controller="Farm" asp-action="Index">Xem Farm</a>
        <a asp-controller="" asp-action="">Cập nhật (chưa làm)</a>
        <a asp-controller="" asp-action="">Xóa (chưa làm)</a>
    </div>
</body>
</html>